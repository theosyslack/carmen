{
  "compilerOptions": {
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "declaration": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "src",
    "paths": {
      "*": ["*"],
      "@missions": ["missions/missions"],
      "@types/*": ["types/*"],
      "@helpers/*": ["helpers/*"],
      "@consts/*": ["consts/*"],
      "@sleuths/*": ["sleuths/*"]
    },
    "lib": ["dom", "esnext"]
  },
  "compileOnSave": true,
  "include": ["./src/**/*"],
  "exclude": ["node_modules"],
  "typeAcquisition": { "enable": true }
}

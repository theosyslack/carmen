{
  "compilerOptions": {
    "importHelpers": true,
    "removeComments": true,
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "target": "es5",
    "declaration": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "./dist",
    "lib": ["dom", "esnext"]
  },
  "compileOnSave": true,
  "include": ["./src/**/*", "index.d.ts"],
  "exclude": ["node_modules/**/*"],
  "typeAcquisition": { "enable": true }
}
